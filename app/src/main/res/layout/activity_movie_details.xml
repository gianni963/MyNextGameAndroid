<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/image_details_movie_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/ff7"
        />

    <TextView
        android:id="@+id/title_movie_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/item_margin"
        android:text="Cyberpunk 2077"
        android:textSize="42sp"
        app:layout_constraintTop_toBottomOf="@+id/image_details_movie_item"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="30sp" />
    <ImageView
        android:id="@+id/star_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_unstar"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="100dp"
        app:layout_constraintTop_toBottomOf="@+id/title_movie_details"
    />


</androidx.constraintlayout.widget.ConstraintLayout>